
namespace framework.os.threading {

	public interface Mutex
	
	{
	  // --- Receptions ---
	
	  // --- Operations ---
        void lock_();
        void lock_(global::framework.time.Duration timeout);
        void unlock();
        global::framework.basicTypes.Boolean tryLock();

        void use(System.Action exclusiveCode);
        void use(global::framework.time.Duration timeout, System.Action exclusiveCode);
	
	}

}
